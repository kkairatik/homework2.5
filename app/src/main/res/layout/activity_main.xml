<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/photo2"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/edit_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="15dp"
        android:background="@color/white"
        android:hint="Введите вашу почту"
        android:inputType="textEmailAddress"
        android:minHeight="48dp"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/edit_1"
        tools:layout_editor_absoluteX="20dp"
        tools:targetApi="M" />

    <EditText
        android:id="@+id/edit_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="65dp"
        android:background="@color/white"
        android:hint="Введите пароль"
        android:inputType="textPassword"
        android:minHeight="48dp"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_send"
        tools:layout_editor_absoluteX="20dp"
        tools:targetApi="M" />

    <TextView
        android:id="@+id/text3"
        android:layout_marginStart="70dp"
        android:textColor="@color/white"
        android:textSize="24dp"
        android:text="или зарегистрируйтесь"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/view_3"
        app:layout_constraintBottom_toBottomOf="@id/edit_2"
        android:layout_marginBottom="150dp"/>



    <com.google.android.material.button.MaterialButton
        app:cornerRadius="20dp"
        android:id="@+id/btn_send"
        android:layout_marginHorizontal="40dp"
        android:layout_marginBottom="75dp"
        android:textSize="20dp"
        android:text="Next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/view_3"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/view1"
        app:layout_constraintBottom_toBottomOf="@id/edit_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="25dp"
        android:text="Выполните вход"/>

    <TextView
        android:textColor="@color/white"
        android:id="@+id/view_2"
        android:layout_marginTop="120dp"
        android:textSize="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Добро пожаловать!"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/view1"
        app:layout_constraintBottom_toBottomOf="@id/view_3"
        />


    <TextView
        android:textColor="@color/white"
        android:id="@+id/view1"
        android:layout_margin="20dp"
        android:textSize="30dp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Вход"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  </androidx.constraintlayout.widget.ConstraintLayout>